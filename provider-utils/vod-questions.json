{
    "resourceName": {
        "key": "resourceName",
        "question": "Provide a friendly name for your resource to be used as a label for this category in the project:",
        "validation": {
            "operator": "regex",
            "value": "^[a-zA-Z0-9]+$",
            "onErrorMsg": "Resource name should be alphanumeric"
        },
        "required": true,
        "default": "myvodservice",
        "next": "createSnsTopic"
    },
    "encodingTemplate": {
        "key": "encodingTemplate",
        "question": "Select a system-provided encoding template, specify an already-created template name: ",
        "type":"list",
        "required": true,
        "default": "Amplify_Video_HLS.json",
        "next": "createSnsTopic"
    },
    "encodingTemplateName": {
      "key": "encodingTemplateName",
      "question": "Provide a specific MediaConvert template name (must be available in project region):",
      "validation": {
          "operator": "regex",
          "value": "^(?!System-)[^$&,:;?<>`\"#%{}\\\/|^~]{1,80}$",
          "onErrorMsg": "Resource name should be alphanumeric, should not begin with System-, or contain $&,:;?<>`\"#%{}/|^~"
      },
      "required": true,
      "next": "createSnsTopic"
    },
    "createSnsTopic": {
        "key" : "createSnsTopic",
        "type": "confirm",
        "question" : "Do you want to get notifications on the video processing job?",
        "required" : true,
        "options" : [
            {
                "value" : "true",
                "next" : "enableSnsFunction"
            },
            {
                "value": "false",
                "next" : "enableCDN"
            }
            ]
    },
    "enableSnsFunction" : {
        "key" : "enableSnsFunction",
        "type" : "confirm",
        "question" : "Do you want a custom function executed for notifications?",
        "required" : true,
        "next": "enableCDN"
    },
    "enableCDN": {
        "key": "enableCDN",
        "type": "confirm",
        "question": "Is this a production enviroment?",
        "required": true,
        "options": [
            {
                "value": "true",
                "next": "modifySignedUrl",
                "ignore": true
            },
            {
                "value": "true",
                "next": "signedKey"
            },
            {
                "value": "false",
                "next": "enableCMS"
            }
        ]
    },
    "enableCMS": {
        "key": "enableCMS",
        "type": "confirm",
        "question": "Do you want Amplify to create a new GraphQL API to manage your videos? (Beta)",
        "required": true,
        "options": [
            {
                "value": "true",
                "next": "permissionSchema",
                "ignore": true
            },
            {
                "value": "false"
            }
        ]
    },
    "subscribeField": {
        "key": "subscribeField",
        "type": "confirm",
        "question": "Do you want to lock your videos with a subscription?",
        "required": true,
        "options": [
            {
                "value": "true",
                "next": ""
            },
            {
                "value": "false",
                "next": ""
            }
        ]
    },
    "editAPI": {
        "key": "editAPI",
        "type": "confirm",
        "question": "Do you want to edit your newly created model?",
        "required": true,
        "options": [
            {
                "value": "true",
                "ignore": true
            },
            {
                "value": "false",
                "ignore": true
            }
        ],
        "default": true
    },
    "modifySignedUrl": {
        "key": "modifySignedUrl",
        "type": "list",
        "question": "We detected you have signed urls configured. Would you like to:",
        "options": [
            {
                "name": "Leave as configured",
                "value": "leave",
                "next": "enableCMS",
                "ignore": true
            },
            {
                "name": "Rotate the keys for the signed urls",
                "value": "rotate",
                "next": "enableCMS",
                "ignore": true
            },
            {
                "name": "Remove signed urls",
                "value": "remove",
                "next": "enableCMS",
                "ignore": true
            }
        ],
        "default": "leave"
    },
    "pemKeyID-DEADDONOTUSE": {
        "key": "pemKeyID-DEADDONOTUSE",
        "type": "input",
        "question": "What is the CloudFront Key Pair Access Key ID associated with the pem key?",
        "required": true,
        "default": "",
        "next": ""
    },
    "signedKey": {
        "key": "signedKey",
        "type": "confirm",
        "question": "Do you want to protect your content with signed urls?",
        "required": true,
        "options": [
            {
                "value": "true",
                "next": "enableCMS"
            },
            {
                "value": "false",
                "next": "enableCMS",
                "ignore": true
            }
        ],
        "default": true
    },
    "overrideSchema": {
        "key": "overrideSchema",
        "type": "confirm",
        "question": "Do you want to override your GraphQL schema?",
        "required": true,
        "options": [
            {
                "value": "true",
                "next": "editAPI",
                "ignore": true
            },
            {
                "value": "false",
                "next": "editAPI",
                "ignore": true
            }
        ],
        "default": true
    },
	"permissionSchema": {
		"key": "permissionSchema",
		"question": "Define your permission schema",
		"type": "checkbox",
		"options": [			
			{
				"name": "Authenticated users who are not a member of any groups can upload videos",
				"value": "any",
				"next": "overrideSchema",
				"ignore": true
			}
		]
	},
	"selectGroups": {
		"key": "selectGroups",
		"question": "Select groups that you want to give permission to upload videos",
		"type": "checkbox",
		"next": "overrideSchema"
	},
    "customUrl": {
        "key": "customUrl",
        "type": "confirm",
        "question": "Do you want to define a custom url for your CloudFront? (Beta)",
        "required": true,
        "options": [
            {
                "value": "true",
                "next": "customDomain"
            },
            {
                "value": "false",
                "next": "customDomain",
                "ignore": true
            }
        ],
        "default": true
    },
    "customDomain": {
        "key": "customDomain",
        "question": "Provide your hosted zone domain name (e.g. mydomain.com):",
        "validation": {
            "operator": "regex",
            "value": "^((?!-))(xn--)?[a-z0-9][a-z0-9-_]{0,61}[a-z0-9]{0,1}\\.(xn--)?([a-z0-9\\-]{1,61}|[a-z0-9-]{1,30}\\.[a-z]{2,})$",
            "onErrorMsg": "domain name is not valid"
        },
        "required": true,
        "next": "customRecord"
    },
    "customRecord": {
        "key": "customRecord",
        "question": "Provide only your sub domain record name (Please note that env and your hosted zone domain will be added automatically):",
        "validation": {
            "operator": "regex",
            "value": "^[a-zA-Z0-9]+$",
            "onErrorMsg": "record name is not valid"
        },
        "default": "vod",
        "required": true,
        "next": "certificate"
    },
    "certificate": {
        "key": "certificate",
        "question": "Provide the ARN of a valid SSL certificate for the above domain from the Certificate Manager in US East (N. Virginia) Region (us-east-1):",
        "validation": {
            "operator": "regex",
            "value": "^arn:aws:acm:us-east-1:\\d+:\\w+\/\\S+",
            "onErrorMsg": "ACM ARN is not valid"
        },
        "required": true,
        "next": "createSnsTopic"
    }
}
